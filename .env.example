# Server Configuration
PORT=3000
NODE_ENV=development

# Google Cloud Configuration (Optional - for advanced features)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GOOGLE_CLOUD_REGION=us-central1

# redis 
REDIS_URL=redis://localhost:6379

# Google Cloud Pub/Sub (Optional)
PUBSUB_TOPIC_NEW_VIDEO=youtube-new-video
PUBSUB_SUBSCRIPTION_VIDEO_PROCESSOR=video-processor-sub

# YouTube Data API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=your-target-channel-id

# Cloudflare D1 Database Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id

# Video Processing Configuration
MAX_VIDEO_DURATION_MINUTES=20
FRAME_SAMPLING_INTERVAL_SECONDS=0.5
OCR_CONFIDENCE_THRESHOLD=0.8

# Monetary Value Detection
MIN_DOLLAR_AMOUNT=500
MAX_DOLLAR_AMOUNT=1000
DOLLAR_AMOUNT_STEP=50

# Audio Analysis
LAUGHTER_DETECTION_SENSITIVITY=0.7
AUDIO_SEGMENT_DURATION_SECONDS=30

# Rate Limiting
YOUTUBE_API_REQUESTS_PER_MINUTE=100
VISION_API_REQUESTS_PER_MINUTE=1000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/yt-scanner.log

# Webhook Configuration (for external notifications)
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your-webhook-secret 